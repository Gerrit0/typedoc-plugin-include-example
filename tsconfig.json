{
	"compilerOptions": {
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"target": "es6",
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"skipLibCheck": true,
		"outDir": "dist",
		"declaration": true,
		"declarationDir": "dist"
	},
	"include": [
		"src"
	],
	"exclude": [
		"src/*.test.ts",
		"demo/*.ts",
		"demo/tests/*.ts",
		"playwright.config.ts",
		"vite.config.ts"
	]
}
